{
  "name": "@repo/server",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts start ./.seruni",
    "build": "tsdown",
    "start": "node dist/main.mjs start ./.seruni",
    "deploy": "rm -rf .deploy && pnpm deploy --filter=@repo/server --prod .deploy && mv .deploy/dist/* .deploy/ && rmdir .deploy/dist",
    "typecheck": "tsc -b",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --type-aware",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@praha/byethrow": "^0.10.0",
    "@praha/error-factory": "^1.3.1",
    "@repo/shared": "workspace:*",
    "alien-signals": "^3.1.2",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.6.2",
    "citty": "^0.2.1",
    "drizzle-orm": "^0.45.1",
    "es-toolkit": "^1.44.0",
    "hono": "^4.11.8",
    "obs-websocket-js": "^5.0.7",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "uid": "^2.0.2",
    "yanki-connect": "^3.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@repo/webui": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.15.0",
    "rollup-plugin-bundle-stats": "^4.21.10",
    "tsdown": "^0.20.3",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
