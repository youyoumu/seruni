    "@hono/node-ws": "^1.3.0",
    "@repo/shared": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.8",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "typescript-event-target": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "tsdown": "^0.20.3",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
