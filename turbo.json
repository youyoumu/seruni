{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["ELECTRON_BIN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck", "@repo/preload#build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "desktop#dev": {
      "dependsOn": ["@repo/preload#build"]
    }
  }
}
